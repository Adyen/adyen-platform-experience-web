{
    "name": "@adyen/adyen-platform-experience-web-playground",
    "private": true,
    "type": "module",
    "keywords": [
        "adyen",
        "adyen-fp",
        "fp",
        "finance",
        "platforms",
        "adyen-for-platforms",
        "components"
    ],
    "version": "1.0.0",
    "license": "MIT",
    "repository": "github:Adyen/adyen-platform-experience-web",
    "bugs": {
        "url": "https://support.adyen.com/"
    },
    "scripts": {
        "vite": "vite dev",
        "start:local": "cross-env ENV=local vite dev --config ./vite.config.ts",
        "start:test": "cross-env ENV=test vite dev --config ./vite.config.ts",
        "build:demo": "vite build --mode demo --config ./vite.config.ts",
        "demo": "npm run build:demo && npm run demo:serve",
        "demo:serve": "vite preview --mode demo --config ./vite.config.ts",
        "demo:serve:e2e": "cross-env E2E_TEST=true vite preview --mode demo --config ./vite.config.ts",
        "type-check": "tsc --watch --preserveWatchOutput",
        "types:watch": "npm run type-check -- --watch",
        "start:mock": "vite dev --mode mocked --config ./vite.config.ts",
        "start:mock:e2e": "cross-env E2E_TEST=true npm run start:mock",
        "format": "prettier --write \"src/**/*.{ts,js,css, scss, html}\"",
        "storybook": "vite-node .storybook/runStorybook.ts",
        "storybook:mocked": "vite-node .storybook/runStorybook.ts --mode mocked",
        "storybook:build": "vite-node ./.storybook/buildStorybook.ts",
        "storybook:demo": "vite-node ./.storybook/buildStorybook.ts --mode demo && npm run demo:serve"
    },
    "devDependencies": {
        "@preact/preset-vite": "^2.8.1",
        "@storybook/addon-a11y": "^7.6.17",
        "@storybook/addon-essentials": "^8.0.4",
        "@storybook/core-server": "^8.0.4",
        "@storybook/manager-api": "^8.0.4",
        "@storybook/preact": "^8.0.4",
        "@storybook/preact-vite": "^8.0.4",
        "@storybook/types": "^8.0.5",
        "autoprefixer": "^10.4.19",
        "cross-env": "^7.0.3",
        "css-loader": "^6.11.0",
        "dotenv": "^16.4.5",
        "file-loader": "^6.2.0",
        "msw": "^2.1.2",
        "postcss": "^8.4.38",
        "prettier": "^3.2.5",
        "sass": "^1.75.0",
        "sass-loader": "^13.2.2",
        "style-loader": "^3.3.4",
        "ts-loader": "^9.5.1",
        "typescript": "^5.4.5",
        "vite": "^5.2.10",
        "vite-node": "^1.5.2"
    },
    "dependencies": {
        "@adyen/adyen-platform-experience-web": "1.0.0-beta.2",
        "preact": "^10.20.2"
    },
    "msw": {
        "workerDirectory": "public"
    }
}
