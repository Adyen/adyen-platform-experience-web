{
    "name": "@adyen/adyen-platform-experience-web",
    "keywords": [
        "adyen",
        "adyen-pe",
        "fp",
        "finance",
        "platforms",
        "adyen-for-platforms",
        "components",
        "adyen-platform-experience"
    ],
    "version": "1.0.0-beta.2",
    "apiVersion": "v1",
    "license": "MIT",
    "repository": "github:Adyen/adyen-platform-experience-web",
    "bugs": {
        "url": "https://support.adyen.com/"
    },
    "files": [
        "dist/**"
    ],
    "sideEffects": [
        "**/*.css"
    ],
    "main": "./dist/cjs/index.js",
    "module": "./dist/es/index.js",
    "types": "./dist/types/index.d.ts",
    "style": "dist/style.css",
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "require": {
                "types": "./dist/types/index.d.ts",
                "default": "./dist/cjs/index.js"
            },
            "import": {
                "types": "./dist/types/index.d.ts",
                "default": "./dist/es/index.js"
            }
        },
        "./adyen-platform-experience-web.css": "./dist/style.css"
    },
    "scripts": {
        "start": "vite dev",
        "build": "rm -rf ./dist && vite build --mode esm --config vite.config.ts && vite build --mode cjs --config vite.config.ts && npm run types:build",
        "build:test": "npm run build && npm pack",
        "build:analyse": "vite build --mode analyse --config vite.config.ts",
        "test": "vitest --config vite.config.ts",
        "test:coverage": "vitest --config vite.config.ts --coverage",
        "test:e2e": "playwright test --project local-chrome",
        "type-check": "tsc --preserveWatchOutput",
        "types:build": "tsc --project tsconfig-build.json",
        "lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet && npm run lint:scss",
        "lint:fix": "npm run lint -- --fix",
        "lint:scss": "stylelint 'src/**/*.scss' --fix",
        "types:watch": "npm run type-check -- --watch",
        "format": "prettier --write 'src/**/*.{ts,js,css, scss, html}'"
    },
    "devDependencies": {
        "@playwright/test": "^1.38.0",
        "@preact/preset-vite": "^2.5.0",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/preact": "^3.2.3",
        "@testing-library/user-event": "^14.4.3",
        "@types/node": "^20.4.7",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.8.1",
        "@vitest/coverage-c8": "^0.30.1",
        "autoprefixer": "^9.8.8",
        "cross-env": "^7.0.3",
        "css-loader": "^4.3.0",
        "dotenv": "^16.0.3",
        "eslint": "^8.12.0",
        "eslint-import-resolver-typescript": "^3.5.2",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.26.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jsdom": "^20.0.3",
        "mini-css-extract-plugin": "^2.4.5",
        "openapi-typescript": "^6.7.0",
        "postcss": "^8.3.11",
        "prettier": "^2.4.1",
        "rollup-plugin-visualizer": "^5.9.0",
        "sass": "^1.43.4",
        "sass-loader": "^12.3.0",
        "style-loader": "^3.3.1",
        "stylelint": "^14.1.0",
        "stylelint-config-recommended": "^6.0.0",
        "stylelint-config-sass-guidelines": "^9.0.1",
        "stylelint-scss": "^4.2.0",
        "ts-loader": "^9.2.6",
        "typescript": "^4.9.4",
        "vite": "^4.2.1",
        "vite-node": "^0.30.1",
        "vitest": "^0.30.1"
    },
    "dependencies": {
        "@adyen/adyen-platform-experience-web-mocks": "^1.0.0",
        "classnames": "^2.3.1",
        "core-js": "^3.20.2"
    },
    "peerDependencies": {
        "preact": "^10.13.2"
    }
}
