{
    "name": "@adyen/adyen-fp-web",
    "private": true,
    "keywords": [
        "adyen",
        "adyen-fp",
        "fp",
        "finance",
        "platforms",
        "adyen-for-platforms",
        "components"
    ],
    "main": "src/index.ts",
    "version": "1.0.0",
    "license": "MIT",
    "repository": "github:Adyen/adyen-fp-web",
    "bugs": {
        "url": "https://support.adyen.com/"
    },
    "types": "src/index.ts",
    "scripts": {
        "start": "vite dev",
        "dev-server": "cross-env NODE_ENV=development webpack --watch --config config/webpack.dev.js",
        "build": "rm -rf dist/ && webpack --config config/webpack.prod.js",
        "test": "BABEL_ENV=test jest --config config/jest.config.js",
        "test:watch": "npm run test -- --watchAll",
        "test:coverage": "npm run test -- --coverage",
        "type-check": "tsc --watch --preserveWatchOutput",
        "lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet",
        "lint:fix": "npm run lint -- --fix",
        "types:watch": "npm run type-check -- --watch",
        "format": "prettier --write 'src/**/*.{ts,js,css, scss, html}'"
    },
    "devDependencies": {
        "@preact/preset-vite": "^2.5.0",
        "@types/jest": "^27.4.0",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.8.1",
        "autoprefixer": "^9.8.8",
        "cross-env": "^7.0.3",
        "css-loader": "^4.3.0",
        "css-minimizer-webpack-plugin": "^3.2.0",
        "dotenv": "^16.0.3",
        "enzyme": "^3.11.0",
        "enzyme-adapter-preact-pure": "^3.3.0",
        "eslint": "^8.12.0",
        "eslint-import-resolver-typescript": "^3.5.2",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.26.1",
        "eslint-plugin-tsdoc": "^0.2.14",
        "eslint-webpack-plugin": "^3.1.1",
        "html-webpack-plugin": "^5.5.0",
        "jest": "^27.5.1",
        "mini-css-extract-plugin": "^2.4.5",
        "postcss": "^8.3.11",
        "prettier": "^2.4.1",
        "sass": "^1.43.4",
        "sass-loader": "^12.3.0",
        "style-loader": "^3.3.1",
        "stylelint": "^14.1.0",
        "stylelint-config-recommended": "^6.0.0",
        "stylelint-config-sass-guidelines": "^9.0.1",
        "stylelint-scss": "^4.2.0",
        "stylelint-webpack-plugin": "^3.1.0",
        "terser-webpack-plugin": "^5.2.4",
        "ts-jest": "^27.0.7",
        "ts-loader": "^9.2.6",
        "typescript": "^4.9.4",
        "vite": "^4.2.1",
        "vite-node": "^0.30.1",
        "webpack": "^5.61.0",
        "webpack-cli": "^4.9.1",
        "webpack-dev-server": "^4.4.0",
        "webpack-merge": "^5.8.0"
    },
    "dependencies": {
        "classnames": "^2.3.1",
        "core-js": "^3.20.2",
        "preact": "^10.5.15",
        "whatwg-fetch": "^3.6.2"
    }
}
