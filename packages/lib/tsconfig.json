{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "declarationMap": true,
        "incremental": true,
        "skipLibCheck": true,

        "sourceMap": true,

        "declaration": true,
        "outDir": "../../dist",
        "declarationDir": "../../dist/types",

        "jsxImportSource": "preact",
        "jsx": "react-jsx",

        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "tests/**/*.ts", "src/language/translations/*.json"],
    "exclude": ["node_modules", "**/*.test.*", "dist"]
}
