{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "composite": true,

        "baseUrl": "./",
        "declarationMap": true,
        "incremental": true,
        "skipLibCheck": true,

        "sourceMap": true,

        "declaration": true,
        "outDir": "./dist",
        "declarationDir": "./dist/types",

        "jsxImportSource": "preact",
        "jsx": "react-jsx",

        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "tests/**/*.ts", "src/language/translations/*.json", "./scss.d.ts"],
    "exclude": ["node_modules", "**/*.test.*", "dist"]
}
