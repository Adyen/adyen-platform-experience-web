{
    "compilerOptions": {
        "declarationMap": true,
        "incremental": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        //ECMAScript interoperability
        "module": "esnext",
        "target": "esnext",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "noEmit": true,

        "stripInternal": true,
        "importHelpers": true,
        "sourceMap": true,

        "declaration": true,
        "declarationDir": "./dist/types",

        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "allowJs": true,

        "baseUrl": "./",
        "lib": ["dom", "esnext"],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "tests/**/*.ts"],
    "exclude": ["node_modules", "**/*.test.*"]
}
