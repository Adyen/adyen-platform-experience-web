{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "declarationMap": true,
        "incremental": true,
        "noEmitOnError": true,
        "skipLibCheck": true,

        "isolatedModules": true,
        "moduleResolution": "node",
        "noEmit": true,

        "sourceMap": true,

        "declaration": true,
        "declarationDir": "../../dist/types",

        "jsxImportSource": "preact",
        "jsx": "react-jsx",

        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "tests/**/*.ts"],
    "exclude": ["node_modules", "**/*.test.*"]
}
