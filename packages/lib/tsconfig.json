{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "declarationMap": true,
        "skipLibCheck": true,
        "noEmit": true,

        "sourceMap": true,

        "declaration": true,
        "outDir": "./dist",
        "declarationDir": "./dist/types",

        "jsxImportSource": "preact",
        "jsx": "react-jsx",
        "paths": {
            "@src/*": ["./src/*"],
            "@styles/*": ["./src/style/*"]
        },

        "types": ["@testing-library/jest-dom", "node"]
    },
    "include": ["**/*"],
    "exclude": ["node_modules", "dist"]
}
