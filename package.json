{
    "name": "@adyen/platform-experience-web-main",
    "version": "1.0.0",
    "keywords": [
        "adyen",
        "adyen-fp",
        "fp",
        "finance",
        "platforms",
        "adyen-for-platforms",
        "components"
    ],
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "private": true,
    "workspaces": [
        "./packages/*"
    ],
    "scripts": {
        "start": "npm run start:test",
        "start:local": "concurrently --kill-others-on-fail 'npm run types:watch' 'npm run start:local -w @adyen/platform-experience-web-playground' --names 'tsc-lib,playground' -c blue,green,cyan,yellow",
        "start:test": "concurrently --kill-others-on-fail 'npm run types:watch' 'npm run start:test -w @adyen/platform-experience-web-playground' --names 'tsc-lib,playground' -c blue,green,cyan,yellow",
        "build": "npm run build -w @adyen/platform-experience-web",
        "build:demo": "npm run build:demo -w @adyen/platform-experience-web-playground",
        "build:publish": "npm run build:test -w @adyen/platform-experience-web",
        "build:analyse": "npm run build:analyse -w @adyen/platform-experience-web",
        "demo": "npm run demo -w @adyen/platform-experience-web-playground",
        "start:mocked": "concurrently --kill-others-on-fail 'npm run types:watch' 'npm run start:mock -w @adyen/platform-experience-web-playground' --names 'lib-types,playground' -c blue,green,cyan,yellow",
        "start:mock:e2e": "concurrently --kill-others-on-fail 'npm run types:watch' 'npm run start:mock:e2e -w @adyen/platform-experience-web-playground' --names 'lib-types,playground' -c blue,green,cyan,yellow",
        "lint": "npm run lint -w @adyen/platform-experience-web",
        "test": "npm run test -w @adyen/platform-experience-web",
        "test:coverage": "npm run test:coverage -w @adyen/platform-experience-web",
        "test:e2e": "playwright test --project local-chrome",
        "test:e2e:debug": "cross-env PWDEBUG=console playwright test --debug --project local-chrome",
        "type-check": "npm run type-check -w @adyen/platform-experience-web",
        "types:watch": "npm run types:watch -w @adyen/platform-experience-web && npm run types:watch -w @adyen/platform-experience-web-playground",
        "format:all": "npm run format -w @adyen/platform-experience-web-playground && npm run format -w @adyen/platform-experience-web",
        "storybook": "concurrently --kill-others-on-fail 'npm run types:watch' 'npm run storybook -w @adyen/platform-experience-web-playground' ",
        "storybook:mocked": "npm run storybook:mocked -w @adyen/platform-experience-web-playground",
        "storybook:build": "npm run storybook:build -w @adyen/platform-experience-web-playground",
        "storybook:demo": "npm run storybook:demo -w @adyen/platform-experience-web-playground",
        "demo:serve": "npm run demo:serve -w @adyen/platform-experience-web-playground",
        "demo:serve:e2e": "npm run demo:serve:e2e -w @adyen/platform-experience-web-playground",
        "watchTS": "tsc -b ./tsconfig.json --watch",
        "schemas:generate": "bash scripts/generate-ts-schemas/generate-schemas.sh",
        "schemas:variables": "bash scripts/generate-ts-schemas/setup-openapi-ts.sh",
        "prepare": "node ./prepare.js && bash ./scripts/process-package-lock.sh"
    },
    "dependencies": {
        "@adyen/bento-design-tokens": "^0.5.2",
        "concurrently": "^7.0.0"
    },
    "devDependencies": {
        "husky": "^7.0.4",
        "lint-staged": "^13.0.1",
        "vite": "^4.3.2",
        "vite-plugin-checker": "^0.5.6"
    },
    "msw": {
        "workerDirectory": "packages/playground/public"
    }
}
