{
    "name": "@adyen/adyen-fp-web-main",
    "version": "1.0.0",
    "keywords": [
        "adyen",
        "adyen-fp",
        "fp",
        "finance",
        "platforms",
        "adyen-for-platforms",
        "components"
    ],
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "private": true,
    "workspaces": [
        "./packages/*"
    ],
    "scripts": {
        "start": "concurrently --kill-others-on-fail \"npm run start -w @adyen/adyen-fp-web\" \"npm run start -w @adyen/adyen-fp-web-playground\" --names \"lib,playground\"",
        "build": "npm --workspace @adyen/adyen-fp-web build",
        "lint": "npm --workspace @adyen/adyen-fp-web lint",
        "test": "npm --workspace @adyen/adyen-fp-web test",
        "test:watch": "npm --workspace @adyen/adyen-fp-web test:watch",
        "test:coverage": "npm --workspace @adyen/adyen-fp-web test:coverage",
        "test:e2e": "npm build && npm workspace @adyen/adyen-fp-web-e2e test:e2e",
        "type-check": "npm workspace @adyen/adyen-fp-web type-check"
    },
    "dependencies": {
        "concurrently": "^7.0.0"
    }
}
