{
    "name": "@adyen/adyen-fp-web-main",
    "version": "1.0.0",
    "keywords": [
        "adyen",
        "adyen-fp",
        "fp",
        "finance",
        "platforms",
        "adyen-for-platforms",
        "components"
    ],
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "private": true,
    "workspaces": [
        "./packages/*"
    ],
    "main": "./dist/adyen-fp-components.es.js",
    "types": "./dist/types/index.d.ts",
    "files": [
        "./dist"
    ],
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "require": {
                "types": "./dist/types/index.d.ts",
                "default": "./dist/adyen-fp-components.cjs.js"
            },
            "import": {
                "types": "./dist/types/index.d.ts",
                "default": "./dist/adyen-fp-components.es.js"
            }
        },
        "./styles.css": "./dist/style.css"
    },
    "scripts": {
        "start": "concurrently --kill-others-on-fail \"npm run types:watch\" \"npm run start -w @adyen/adyen-fp-web-playground\" --names \"tsc-lib,playground\" -c blue,green,cyan,yellow",
        "build": "npm run build -w @adyen/adyen-fp-web",
        "build:test": "npm run build:test -w @adyen/adyen-fp-web",
        "build:demo": "vite build --mode demo",
        "demo": "npm run build:demo && npm run demo:serve",
        "demo:serve": "vite preview --mode demo",
        "start:mocked": "concurrently --kill-others-on-fail \"npm run types:watch\" \"npm run start:mock -w @adyen/adyen-fp-web-playground\" --names \"lib-types,playground\" -c blue,green,cyan,yellow",
        "lint": "npm run lint -w @adyen/adyen-fp-web",
        "test": "npm run test -w @adyen/adyen-fp-web",
        "test:watch": "npm run test:watch -w @adyen/adyen-fp-web",
        "test:coverage": "npm run test:coverage -w @adyen/adyen-fp-web",
        "test:e2e": "npm run build && npm test:e2e -w @adyen/adyen-fp-web-e2e ",
        "type-check": "npm run type-check -w @adyen/adyen-fp-web",
        "types:watch": "npm run types:watch -w @adyen/adyen-fp-web",
        "prepare": "husky install",
        "format:all": "npm run format -w @adyen/adyen-fp-web-playground && npm run format -w @adyen/adyen-fp-web"
    },
    "dependencies": {
        "concurrently": "^7.0.0",
        "preact": "^10.13.2"
    },
    "devDependencies": {
        "husky": "^7.0.4",
        "lint-staged": "^13.0.1",
        "vite": "^4.3.2",
        "vite-plugin-checker": "^0.5.6"
    }
}
