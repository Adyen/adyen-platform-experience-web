{
    "git": {
        "commitMessage": "chore: release v${version}",
        "tagName": "v${version}",
        "pushArgs": ["--follow-tags", "origin bump/${version}:bump/${version}"]
    },
    "npm": {
        "publish": false
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md",
            "config": "changelog.config.js"
        }
    },
    "hooks": {
        "before:git:release": "git checkout -b bump/${version}",
        "after:bump": "node ./scripts/update-versions.js ${version} && npx auto-changelog -p",
        "after:release": "git push origin HEAD"
    }
}
