{
    "git": {
        "commitMessage": "chore: release v${version}",
        "tagName": "v${version}",
        "tag": false,
        "push": false
    },
    "npm": {
        "publish": false
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md",
            "config": "changelog.config.js"
        }
    },
    "hooks": {
        "after:bump": "./scripts/update-version.sh ${version}",
        "after:release": "git push origin -u HEAD::bump/${version}"
    }
}
