{
    "git": {
        "commitMessage": "chore: release v${version}",
        "tagName": "v${version}",
        "pushArgs": ["--follow-tags"],
        "tag": false,
        "push": {
            "autoSetupRemote": true
        }
    },
    "npm": {
        "publish": false
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md",
            "config": "changelog.config.js"
        }
    },
    "hooks": {
        "before:git:release": "git checkout -b bump/${version} && git branch --set-upstream-to origin bump/${version}",
        "after:bump": "./scripts/update-version.sh ${version}",
        "after:release": "git push origin bump/${version}"
    }
}
