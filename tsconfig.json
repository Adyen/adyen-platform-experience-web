        "noEmitOnError": true,
        "allowJs": true,
        "moduleResolution": "node",
        "module": "esnext",
        "target": "esnext",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "stripInternal": true,
        "importHelpers": true,
        "declarationMap": true
